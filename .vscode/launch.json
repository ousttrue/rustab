    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug executable 'generator'",
            "cargo": {
                "args": [
                    "build",
                    "--bin=generator",
                    "--package=generator"
                ],
                "filter": {
                    "name": "generator",
                    "kind": "bin"
                }
            },
            "args": [
                "-I", "${workspaceFolder}",
                "-h", "windows.h",
                "-h", "wintab/include/WINTAB.H",
                "-h", "wintab/include/PKTDEF.H",
            ],
            "cwd": "${workspaceFolder}",
            "env": {
                "PATH": "${env:PATH};C:\\Program Files\\LLVM\\bin",
            }
        },
        {
            "type": "lldb",
            "request": "launch",
            "name": "Debug unit tests in executable 'generator'",
            "cargo": {
                "args": [
                    "test",
                    "--no-run",
                    "--bin=generator",
                    "--package=generator"
                ],
                "filter": {
                    "name": "generator",
                    "kind": "bin"
                }
            },
            "args": [],
            "cwd": "${workspaceFolder}"
        }
    ]
}